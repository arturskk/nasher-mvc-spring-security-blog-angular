<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!--
	Beans for controlling...
	-->
<bean name="index"
      class="ir.mnm.nasher.web.controller.blogs" >
    <constructor-arg ref="blogPostDao"/>
    <constructor-arg ref="categotyDao"/>
</bean>

    <bean name="category"
          class="ir.mnm.nasher.web.controller.categoryController" >
        <constructor-arg ref="blogPostDao"/>
        <constructor-arg ref="categotyDao"/>
    </bean>
    <bean name="one"
          class="ir.mnm.nasher.web.controller.oneController" >
        <constructor-arg ref="blogPostDao"/>
        <constructor-arg ref="categotyDao"/>
    </bean>
    <bean name="signup"
          class="ir.mnm.nasher.web.controller.signController" >
        <constructor-arg ref="blogPostDao"/>
        <constructor-arg ref="categotyDao"/>
    </bean>
    <bean name="upload.do"
          class="ir.mnm.nasher.web.controller.admin" >
        </bean>
    <bean id="multipartResolver"
          class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
        <property name="maxUploadSize" value="99971520" />
    </bean>

<bean id="viewResolver"
      class="org.springframework.web.servlet.view.InternalResourceViewResolver" >
<property name="prefix">
    <value>/pages/</value>
</property>
<property name="suffix">
    <value>.jsp</value>
</property>
</bean>
</beans>